---
import Layout from '../components/Layout.astro';
import TextAnimation from '../components/TextAnimation.astro';

interface Frontmatter {
  title: string;
  date: string;
  description?: string;
}

type MDXContent = {
  Content: any;
  frontmatter: Frontmatter;
  file: string;
};

const markdownImports = import.meta.glob<MDXContent>('../content/news/*.md', { eager: true });

let dynamicNewsItems = Object.entries(markdownImports).map(([path, mod]) => {
  return {
    title: mod.frontmatter.title,
    date: mod.frontmatter.date,
    description: mod.frontmatter.description,
    Content: mod.Content,
    path: path,
  };
});

dynamicNewsItems.sort((a, b) => b.date.localeCompare(a.date));

const top3News = dynamicNewsItems.slice(0, 3);

const shortDescription = `大学の学生宿舎に住んでいる猫を主な対象として地域ねこ活動を行う学生団体です。`;

const longDescription = `
Trap（捕獲する） Neuter（避妊手術をする） Release（元に戻す）

猫達のお世話をしながら、優しく頭数を減らすことを目的としています。

他には4月の新勧活動や11月雙峰祭での出店、12月の猫シンポジウムへの参加、追いコンや長期休暇では旅行やBBQなど様々な活動を行っています。
猫に興味のある人、地域ねこ活動に興味がある人は見学に来てみてください！
`;

const activityItems = [
  {
    title: "地域ねこ活動",
    description: "主な活動は餌やりとTNRです。平砂学生宿舎、追越学生宿舎、一の矢学生宿舎に餌やりに行きます。",
  },
  {
    title: "イベント企画",
    description: "新勧活動や雙峰祭における出店を企画・運営しています。",
  },
  {
    title: "交流・レクリエーション",
    description: "BBQや猫カフェ、猫島など、メンバー同士の交流を深めるレクリエーション活動も行っています。",
  },
];
---

<Layout title="HSCaT | ホーム">
  <section class="relative h-screen w-full flex items-center justify-center bg-[url('/hero-background.jpg')] bg-cover bg-center font-['Zen_Kaku_Gothic_New']">
    <div class="bg-black/40 absolute inset-0"></div>
    <div class="relative text-center">
      <TextAnimation text="Humane Society Cat's Assistance in Tsukuba" />
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold mb-6 text-amber-800 text-center">HSCaTについて</h2>

    <div class="flex flex-col md:flex-row items-start md:items-center space-y-6 md:space-y-0 md:space-x-6">
      <div class="md:w-1/2">
        <img
          src="/esa.png"
          alt="HSCaTの活動画像"
          class="w-full h-auto rounded shadow"
        />
      </div>

      <div class="md:w-1/2">
        <p class="mb-6 text-lg">
          {shortDescription}
        </p>

        <div class="space-y-4 whitespace-pre-line">
          {longDescription}
        </div>
      </div>
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold mb-6 text-amber-800 text-center">活動内容</h2>
    <div class="space-y-6">
      {activityItems.map((activity) => (
        <div class="border-b pb-4">
          <h3 class="text-xl font-semibold mb-2 text-amber-800">{activity.title}</h3>
          <p class="text-gray-700">{activity.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="max-w-3xl mx-auto px-4 pb-12">
    <h2 class="text-2xl font-bold mb-4 text-amber-800 text-center">ニュース一覧</h2>
    <div class="flex flex-col items-center">
      <ul class="space-y-3 w-full list-none">
        {top3News.map((news) => (
          <li class="flex justify-center">
            <span class="mr-2">•</span>
            <a
              href={`/news/${news.path.split('/').pop()?.split('.').shift()}`}
              class="text-amber-800 hover:text-amber-600 underline"
            >
              {news.title}
            </a>
          </li>
        ))}
      </ul>
      <div class="mt-4">
        <a
          href="/news"
          class="inline-block mt-2 px-4 py-2 bg-amber-800 text-white rounded hover:bg-amber-700 transition"
        >
          ニュース一覧ページへ
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-3xl mx-auto px-4 pb-16">
    <h2 class="text-2xl font-bold mb-6 text-amber-800 text-center">リンク/問い合わせ</h2>
    <div class="flex flex-wrap justify-center items-center space-x-2">
      <a href="https://x.com/HSCaT1" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2">
        <img src="/x.png" alt="X" class="w-8 h-8" />
      </a>
      
      <span class="mx-2">/</span>
      
      <a href="https://www.instagram.com/itf_hscat" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2">
        <img src="/insta.png" alt="Instagram" class="w-8 h-8" />
      </a>
      
      <span class="mx-2">/</span>
      
      <a href="mailto:h.s.catmail@gmail.com" class="flex items-center space-x-2">
        <img src="/mail.png" alt="メール" class="w-8 h-8" />
      </a>
      
      <span class="mx-2">/</span>
      
      <a href="https://github.com/mizuamedesu/hscat-web" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2">
        <img src="/code.png" alt="ソースコード" class="w-8 h-8" />
      </a>
    </div>
  </section>
</Layout>